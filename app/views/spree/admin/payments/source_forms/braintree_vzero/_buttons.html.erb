<% @order.available_payment_methods.each do |method| %>
  <% next unless method.kind_of?(Spree::Gateway::BraintreeVzeroBase) %>

  <% unless method.is_a?(Spree::Gateway::BraintreeVzeroPaypalExpress) %>
    <%= submit_tag Spree.t(:update), class: 'fa fa-refresh button brainree-submit', style: 'display: none;', method_id: method.id %>
  <% end %>
<% end %>
